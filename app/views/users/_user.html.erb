<% form_for @user do |form| %>  
<%= form.error_messages %>  
<%= form.label :username, "Username" %><%= form.text_field :username %><br />       
<%= form.label :email, "Email" %><%= form.text_field :email %><br />
<%= form.label :password, "Password" %><%= form.password_field :password %><br />  
<%= form.label :password_confirmation, "Password confirmation" %><%= form.password_field :password_confirmation %><br />
<%= form.submit "Submit" %>       
<% end %>